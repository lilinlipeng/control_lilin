/* 页面内容区域 */
.page-content.data-v-e3b59ed8 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面描述区域 */
.page-description.data-v-e3b59ed8 {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
.description-text.data-v-e3b59ed8 {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  text-align: center;
}

/* 分类列表 */
.category-list.data-v-e3b59ed8 {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 分类项 */
.category-item.data-v-e3b59ed8 {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 分类头部 */
.category-header.data-v-e3b59ed8 {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}
.category-header.data-v-e3b59ed8:active {
  background-color: #f8f8f8;
}

/* 分类图标 */
.category-icon.data-v-e3b59ed8 {
  width: 52rpx;
  height: 52rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.3);
}

/* 分类信息 */
.category-info.data-v-e3b59ed8 {
  flex: 1;
}
.category-name.data-v-e3b59ed8 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}
.category-count.data-v-e3b59ed8 {
  font-size: 24rpx;
  color: #999999;
}

/* 展开箭头 */
.expand-arrow.data-v-e3b59ed8 {
  transition: transform 0.3s ease;
}
.expand-arrow.expanded.data-v-e3b59ed8 {
  transform: rotate(180deg);
}

