/* 页面整体样式 */
.content.data-v-f70ba15e {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar.data-v-f70ba15e {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 食谱列表样式 */
.recipe-list.data-v-f70ba15e {
  padding: 0 20rpx;
}

/* 食谱卡片样式 */
.recipe-card.data-v-f70ba15e {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}
.recipe-card.data-v-f70ba15e:active {
  transform: scale(0.98);
  /* 点击效果 */
}

/* 封面图片区域 */
.recipe-cover.data-v-f70ba15e {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}
.cover-image.data-v-f70ba15e {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 浏览量标签 */
.view-count.data-v-f70ba15e {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.count-text.data-v-f70ba15e {
  color: #fff;
  font-size: 24rpx;
}

/* 食谱信息区域 */
.recipe-info.data-v-f70ba15e {
  padding: 24rpx;
}

/* 食谱标题 */
.recipe-title.data-v-f70ba15e {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 食谱描述 */
.recipe-desc.data-v-f70ba15e {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 图片列表样式 */
.image-list.data-v-f70ba15e {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}
.small-image.data-v-f70ba15e {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
  transition: transform 0.2s ease;
}
.small-image.data-v-f70ba15e:active {
  transform: scale(0.95);
}

/* 底部信息 */
.recipe-bottom.data-v-f70ba15e {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 作者信息 */
.author-info.data-v-f70ba15e {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.author-name.data-v-f70ba15e {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}
.publish-time.data-v-f70ba15e {
  font-size: 24rpx;
  color: #999;
}

/* 状态标签 */
.status-badge.data-v-f70ba15e {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.status-pending.data-v-f70ba15e {
  background-color: #fff3cd;
  color: #856404;
  border: 1px solid #ffeaa7;
}
.status-approved.data-v-f70ba15e {
  background-color: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}
.status-rejected.data-v-f70ba15e {
  background-color: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

/* 空状态样式 */
.empty-state.data-v-f70ba15e {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}
.empty-text.data-v-f70ba15e {
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 加载更多样式 */
.load-more.data-v-f70ba15e {
  padding: 40rpx 0;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
.recipe-card.data-v-f70ba15e {
    margin-bottom: 16rpx;
}
.recipe-cover.data-v-f70ba15e {
    height: 320rpx;
}
.recipe-title.data-v-f70ba15e {
    font-size: 30rpx;
}
.recipe-desc.data-v-f70ba15e {
    font-size: 26rpx;
}
}