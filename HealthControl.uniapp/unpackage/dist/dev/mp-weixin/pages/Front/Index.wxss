}

/* Swiper 容器样式 */
.overview-swiper.data-v-b146bd57 {
  width: 100%;
  height: 520rpx;
}
.swiper-page.data-v-b146bd57 {
  padding: 0 var(--spacing-xs);
}

/* 4宫格布局 */
.overview-grid.data-v-b146bd57 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: var(--spacing-base);
  height: 300rpx;
}
.overview-card.data-v-b146bd57 {
  background: white;
  border-radius: var(--border-radius-base);
  padding: var(--spacing-base);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--box-shadow-sm);
  transition: var(--transition-base);
  position: relative;
  cursor: pointer;
}

/* 异常状态卡片样式 */
.overview-card.abnormal.data-v-b146bd57 {
  border: 2rpx solid #ff4757;
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
}
.overview-card.data-v-b146bd57:active {
  transform: scale(0.98);
}
.card-icon.data-v-b146bd57 {
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

/* 图标图片样式 */
.icon-image.data-v-b146bd57 {
  width: 48rpx;
  height: 48rpx;
}

/* 默认图标样式 */
.default-icon.data-v-b146bd57 {
  font-size: 48rpx;
}
.card-label.data-v-b146bd57 {
  font-size: var(--font-size-sm);
  color: var(--text-color-light);
  text-align: center;
  flex-shrink: 0;
}
.card-value.data-v-b146bd57 {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-color);
  text-align: center;
  flex-shrink: 0;
}
.card-unit.data-v-b146bd57 {
  font-size: var(--font-size-xs);
  color: var(--text-color-lighter);
  text-align: center;
  flex-shrink: 0;
}

/* 异常状态标签 */
.abnormal-tag.data-v-b146bd57 {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #ff4757;
  border-radius: 8rpx;
  padding: 2rpx 6rpx;
}
.abnormal-text.data-v-b146bd57 {
  color: white;
  font-size: 20rpx;
  font-weight: 500;
}

/* 空卡片样式 */
