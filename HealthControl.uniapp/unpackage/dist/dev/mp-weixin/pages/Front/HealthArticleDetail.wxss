/* 推荐文章元信息 */
.recommend-meta.data-v-73aaf5e4 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.meta-category.data-v-73aaf5e4 {
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(74, 144, 226, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(74, 144, 226, 0.2);
}
.meta-author.data-v-73aaf5e4 {
  font-size: 24rpx;
  color: #666;
}

/* 推荐文章统计信息 */
.recommend-stats.data-v-73aaf5e4 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.stats-views.data-v-73aaf5e4 {
  font-size: 22rpx;
  color: #999;
}
.stats-time.data-v-73aaf5e4 {
  font-size: 22rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750px) {
.article-container.data-v-73aaf5e4 {
    padding: 30rpx;
}
.article-title.data-v-73aaf5e4 {
    font-size: 40rpx;
}
.article-footer.data-v-73aaf5e4 {
    flex-direction: column;
    gap: 16rpx;
    align-items: flex-start;
}
