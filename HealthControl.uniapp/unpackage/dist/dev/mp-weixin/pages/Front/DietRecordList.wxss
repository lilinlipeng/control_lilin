/* 浮动添加按钮样式 */
.floating-add-btn.data-v-3e16dfb0 {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 999;
  transition: all 0.3s ease;
}

/* 按钮点击效果 */
.floating-add-btn.data-v-3e16dfb0:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

