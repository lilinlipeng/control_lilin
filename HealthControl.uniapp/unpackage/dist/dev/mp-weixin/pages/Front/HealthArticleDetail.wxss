/* 文章容器 */
.article-container.data-v-73aaf5e4 {
  background-color: #f8f9fa;
  min-height: calc(100vh - 176rpx);
  padding-bottom: 120rpx;
  /* 为底部操作栏留出空间 */
}

/* 文章头部信息 */
.article-header.data-v-73aaf5e4 {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 文章标题 */
.article-title.data-v-73aaf5e4 {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

/* 作者信息头部 */
.author-info-header.data-v-73aaf5e4 {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 16rpx 0;
}
.author-avatar.data-v-73aaf5e4 {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 4rpx solid #f0f0f0;
}
.author-name.data-v-73aaf5e4 {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 文章基本信息 */
.article-info.data-v-73aaf5e4 {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.info-item.data-v-73aaf5e4 {
  display: flex;
  align-items: center;
}
.info-label.data-v-73aaf5e4 {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}
.info-value.data-v-73aaf5e4 {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 审核状态 */
.audit-status.data-v-73aaf5e4 {
  display: flex;
  justify-content: flex-end;
}

/* 文章内容 */
.article-content.data-v-73aaf5e4 {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.content-text.data-v-73aaf5e4 {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

/* 文章底部信息 */
.article-footer.data-v-73aaf5e4 {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footer-item.data-v-73aaf5e4 {
  display: flex;
  align-items: center;
}
.footer-label.data-v-73aaf5e4 {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}
.footer-value.data-v-73aaf5e4 {
  font-size: 26rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-actions.data-v-73aaf5e4 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 40rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f0f0f0;
  z-index: 1000;
}

/* 操作按钮 */
.action-button.data-v-73aaf5e4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
  height: 80rpx;
}
.action-button.data-v-73aaf5e4:active {
  transform: scale(0.95);
  background-color: #f8f9fa;
}

/* 操作按钮图标 */
.action-icon.data-v-73aaf5e4 {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 4rpx;
}

/* 操作按钮文字 */
.action-text.data-v-73aaf5e4 {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  transition: color 0.3s ease;
}

/* 激活状态的按钮文字 */
.action-text.active.data-v-73aaf5e4 {
  font-weight: 500;
}

/* 收藏按钮激活状态 */
.action-button.active .action-text.data-v-73aaf5e4 {
  color: #ff6b6b;
}

/* 点赞按钮激活状态 */
.action-button:last-child.active .action-text.data-v-73aaf5e4 {
  color: #4CAF50;
}

/* 推荐文章区域 */
.recommend-section.data-v-73aaf5e4 {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 122rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 推荐标题 */
.recommend-title.data-v-73aaf5e4 {
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.title-text.data-v-73aaf5e4 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
}
.title-text.data-v-73aaf5e4::before {
  content: "";
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, var(--primary-color), #4CAF50);
  border-radius: 4rpx;
}

/* 推荐列表 */
.recommend-list.data-v-73aaf5e4 {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 推荐文章卡片 */
.recommend-item.data-v-73aaf5e4 {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}
.recommend-item.data-v-73aaf5e4:active {
  transform: scale(0.98);
  background-color: #e9ecef;
  border-color: var(--primary-color);
}

/* 推荐文章封面 */
.recommend-cover.data-v-73aaf5e4 {
  flex-shrink: 0;
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
}
.cover-image.data-v-73aaf5e4 {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 推荐文章内容区域 */
.recommend-content.data-v-73aaf5e4 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 标题和统计信息区域 */
.title-section.data-v-73aaf5e4 {
  margin-bottom: 16rpx;
}

/* 推荐文章标题 */
.recommend-item-title.data-v-73aaf5e4 {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
