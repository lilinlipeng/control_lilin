  padding: var(--spacing-lg);
}
.welcome-info.data-v-b146bd57 {
  display: flex;
  flex-direction: column;
}
.welcome-title.data-v-b146bd57 {
  color: white;
  font-size: var(--font-size-lg);
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}
.welcome-subtitle.data-v-b146bd57 {
  color: rgba(255, 255, 255, 0.9);
  font-size: var(--font-size-base);
}
.health-icon .icon.data-v-b146bd57 {
  font-size: 60rpx;
}

/* 健康概览 */
.health-overview.data-v-b146bd57 {
  margin-bottom: var(--spacing-base);
}
.section-title.data-v-b146bd57 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-base);
  padding: 0 var(--spacing-xs);
}
.title-text.data-v-b146bd57 {
  font-size: var(--font-size-md);
