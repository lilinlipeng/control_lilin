/* 输入框样式 */
.custom-input.data-v-0aeddf02 .uni-easyinput__content {
  background: #f8f9fa !important;
  border: 2rpx solid #e9ecef !important;
  border-radius: 16rpx !important;
  padding: 24rpx 20rpx !important;
  transition: all 0.3s ease !important;
}
.custom-input.data-v-0aeddf02 .uni-easyinput__content:focus-within {
  border-color: var(--primary-color) !important;
  background: #ffffff !important;
  box-shadow: 0 0 0 6rpx rgba(52, 152, 219, 0.1) !important;
}
.custom-input.data-v-0aeddf02 .uni-easyinput__content-input {
  font-size: 28rpx !important;
  color: #2c3e50 !important;
}
.custom-input.data-v-0aeddf02 .uni-easyinput__content-input::-webkit-input-placeholder {
  color: #95a5a6 !important;
}
.custom-input.data-v-0aeddf02 .uni-easyinput__content-input::placeholder {
  color: #95a5a6 !important;
}

/* 文本域样式 */
.custom-textarea.data-v-0aeddf02 .uni-easyinput__content {
  background: #f8f9fa !important;
  border: 2rpx solid #e9ecef !important;
  border-radius: 16rpx !important;
  padding: 24rpx 20rpx !important;
  min-height: 120rpx !important;
  transition: all 0.3s ease !important;
}
.custom-textarea.data-v-0aeddf02 .uni-easyinput__content:focus-within {
  border-color: var(--primary-color) !important;
  background: #ffffff !important;
  box-shadow: 0 0 0 6rpx rgba(52, 152, 219, 0.1) !important;
}
.custom-textarea.data-v-0aeddf02 .uni-easyinput__content-textarea {
  font-size: 28rpx !important;
  color: #2c3e50 !important;
  line-height: 1.6 !important;
}
.custom-textarea.data-v-0aeddf02 .uni-easyinput__content-textarea::-webkit-input-placeholder {
  color: #95a5a6 !important;
}
.custom-textarea.data-v-0aeddf02 .uni-easyinput__content-textarea::placeholder {
  color: #95a5a6 !important;
}

/* 数字输入框样式 */
.custom-number-box.data-v-0aeddf02 .uni-numbox {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  overflow: hidden;
  height: 80rpx;
}
.custom-number-box.data-v-0aeddf02 .uni-numbox__minus,
.custom-number-box.data-v-0aeddf02 .uni-numbox__plus {
  background: #ffffff !important;
  border: none !important;
  color: var(--primary-color) !important;
  font-weight: 600 !important;
  width: 60rpx !important;
  height: 76rpx !important;
  line-height: 76rpx !important;
}
.custom-number-box.data-v-0aeddf02 .uni-numbox__minus:active,
.custom-number-box.data-v-0aeddf02 .uni-numbox__plus:active {
  background: #f8f9fa !important;
}
.custom-number-box.data-v-0aeddf02 .uni-numbox__value {
  background: #ffffff !important;
  border: none !important;
  color: #2c3e50 !important;
  font-size: 28rpx !important;
  text-align: center !important;
  height: 76rpx !important;
  line-height: 76rpx !important;
}

/* 日期时间选择器样式 */
.custom-datetime.data-v-0aeddf02 .uni-date-x {
  background: #f8f9fa !important;
  border: 2rpx solid #e9ecef !important;
  border-radius: 16rpx !important;
  padding: 24rpx 20rpx !important;
  height: auto !important;
}
.custom-datetime.data-v-0aeddf02 .uni-date-x .uni-date-x__input {
  font-size: 28rpx !important;
  color: #2c3e50 !important;
}

/* 数据选择器样式 */
.custom-picker.data-v-0aeddf02 .uni-data-picker {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
}
.custom-picker.data-v-0aeddf02 .uni-data-picker .input-value {
  font-size: 28rpx !important;
  color: #2c3e50 !important;
}
.custom-picker.data-v-0aeddf02 .uni-data-picker .placeholder {
  color: #95a5a6 !important;
}

/* 按钮容器 */
.button-wrapper.data-v-0aeddf02 {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

/* 提交按钮样式 */
.submit-button.data-v-0aeddf02 {
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(52, 152, 219, 0.3);
  transition: all 0.3s ease;
}
.submit-button.data-v-0aeddf02:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.4);
  background: #2980b9;
}
.submit-button .button-text.data-v-0aeddf02 {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 2rpx;
}

