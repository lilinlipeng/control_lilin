/* 页面容器 */
.page-container.data-v-0aeddf02 {
  padding: 10rpx 30rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
}

/* 表单外包装 */
.form-wrapper.data-v-0aeddf02 {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

/* 表单标题区域 */
.form-title.data-v-0aeddf02 {
  text-align: center;
  margin-bottom: 60rpx;
}
.form-title .title-text.data-v-0aeddf02 {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}
.form-title .subtitle-text.data-v-0aeddf02 {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

/* 自定义表单样式 */
.custom-form .form-item-wrapper.data-v-0aeddf02 {
  margin-bottom: 40rpx;
}
.custom-form .form-item-wrapper.data-v-0aeddf02:last-child {
  margin-bottom: 20rpx;
}

