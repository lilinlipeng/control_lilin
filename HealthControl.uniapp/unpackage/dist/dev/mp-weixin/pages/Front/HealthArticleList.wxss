/* 行为相关颜色 */
.health-article-container.data-v-b9c695d9 {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索区域 */
.search-section.data-v-b9c695d9 {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 分类筛选区域 */
.category-filter.data-v-b9c695d9 {
  background-color: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}
.category-scroll.data-v-b9c695d9 {
  white-space: nowrap;
  /* 隐藏滚动条但保持滚动功能 */
  overflow-x: auto;
  scrollbar-width: none;
  /* Firefox */
  -ms-overflow-style: none;
  /* Internet Explorer 10+ */
}
.category-scroll.data-v-b9c695d9::-webkit-scrollbar {
  display: none;
  /* WebKit */
}
.category-list.data-v-b9c695d9 {
  display: flex;
  padding: 0 30rpx;
}
.category-item.data-v-b9c695d9 {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}
.category-item.active.data-v-b9c695d9 {
  background-color: var(--primary-color, #007aff);
  color: #fff;
}
.category-item.data-v-b9c695d9:last-child {
  margin-right: 30rpx;
}

/* 文章列表区域 */
.article-list.data-v-b9c695d9 {
  padding: 0 30rpx;
}
.article-card.data-v-b9c695d9 {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}
.article-card.data-v-b9c695d9:active {
  transform: scale(0.98);
}

/* 文章封面 */
.article-cover.data-v-b9c695d9 {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}
.cover-image.data-v-b9c695d9 {
  width: 100%;
  height: 100%;
}
.audit-status.data-v-b9c695d9 {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}
.audit-status.status-approved.data-v-b9c695d9 {
  background-color: #4cd964;
}
.audit-status.status-pending.data-v-b9c695d9 {
  background-color: #ff9500;
}

/* 文章信息 */
.article-info.data-v-b9c695d9 {
  padding: 30rpx;
}
.article-title.data-v-b9c695d9 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.article-meta.data-v-b9c695d9 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.category-tag.data-v-b9c695d9 {
  padding: 8rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
}
.view-count.data-v-b9c695d9 {
  display: flex;
  align-items: center;
}
.view-count .count-text.data-v-b9c695d9 {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #999;
}
.publish-info.data-v-b9c695d9 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.author.data-v-b9c695d9 {
  font-weight: 500;
}
.publish-time.data-v-b9c695d9 {
  color: #ccc;
}

/* 空状态 */
.empty-state.data-v-b9c695d9 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}
.empty-state .empty-text.data-v-b9c695d9 {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
.article-cover.data-v-b9c695d9 {
    height: 320rpx;
}
.article-title.data-v-b9c695d9 {
    font-size: 30rpx;
}
